@model MayewoPortfolio.Models.Communication
@{
    ViewBag.Title = "UpdateCommunication";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <title>Bootstrap Example</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="card">
        <div class="card-header">
            <h5 class="card-title"> Update About</h5>
        </div>
        <div class="card-body" style="background-color:ghostwhite">
            <div class="mb-3">
                <form method="post" action="">
                    <label for="contactid" class="form-label"><b>Communacition Id</b></label>
                    <input type="text" class="form-control" id="contactid" value="@Model.ContactId" name="ContactId">

                    <label for="namesurname" class="form-label"><b>Name - Surname</b></label>
                    <input type="text" class="form-control" id="namenurname" value="@Model.NameSurname" name="NameSurname">

                    <label for="email" class="form-label"><b>E-mail</b></label>
                    <input type="text" class="form-control" id="email" value="@Model.Email" name="Email">

                    <label for="catgoryid" class="form-label"><b>Category</b></label>
                    <input type="text" class="form-control" id="catgoryid" value="@Model.CatgoryId" name="CatgoryId">

                    <label for="message" class="form-label"><b>Message</b></label>
                    <input type="text" class="form-control" id="message" value="@Model.Message" name="Message">

                    <label for="senddate" class="form-label"><b>Send Date</b></label>
                    <input type="datetime" class="form-control" id="senddate" value="@Model.SendDate" name="SendDate">

                    <label for="isread" class="form-label"><b>Statu</b></label>
                    <input type="text" class="form-control" id="isread" value="@Model.IsRead" name="IsRead">

                    <button type="submit" class="btn btn-outline-success">Save Changes</button>
                    <button href="/Communication/Index/" type="submit" class="btn btn-outline-warning">Go Back</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

