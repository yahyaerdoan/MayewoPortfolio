@model List<MayewoPortfolio.Models.Aboute>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>About List</h2>

<table class="table table-hover">
    <tr class="table-info">
        <th>Id</th>
        <th>Title</th>
        <th>Header</th>
        <th>Descriptions</th>
        <th>Image</th>
        <th>Update</th>
        <th>Remove</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.Title</td>
            <td>@item.Header</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>
            <td><a href="/About/Update/@item.AboutId" type="button" class="btn btn-outline-success">Update</a></td>
            <td><a href="/About/RemoveAbout/@item.AboutId" type="button" class="btn btn-outline-danger">Remove</a></td>
        </tr>
    }
</table>
<td><a href="/About/CreateNewAbout/" type="button" class="btn btn-outline-primary">Create New About</a></td> 