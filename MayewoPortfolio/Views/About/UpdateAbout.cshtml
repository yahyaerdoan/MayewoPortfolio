@model MayewoPortfolio.Models.Aboute
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <title>Bootstrap Example</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

@using (Html.BeginForm("UpdateAbout", "About", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(a => a.AboutId)
        @Html.TextBoxFor(a => a.AboutId, new { @class = "form-control" })
        @Html.LabelFor(a => a.Title)
        @Html.TextBoxFor(a => a.Title, new { @class = "form-control" })
        @Html.LabelFor(a => a.Header)
        @Html.TextBoxFor(a => a.Header, new { @class = "form-control" })
        @Html.LabelFor(a => a.Description)
        @Html.TextBoxFor(a => a.Description, new { @class = "form-control" })
        @Html.LabelFor(a => a.ImageUrl)
        @Html.TextBoxFor(a => a.ImageUrl, new { @class = "form-control" })
        <div>
            <td>
                <a href="/About/UpdateAbout" type="button" class="btn btn-outline-success">Update</a>
            </td>
        </div>
    </div>
}