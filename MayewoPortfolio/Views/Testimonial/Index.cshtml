@model List<MayewoPortfolio.Models.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Testimonial List</h2>

<table class="table table-hover">
    <tr class="table-info">
        <th>Id</th>
        <th>Name - Surname</th>
        <th>Url</th>
        <th>Description</th>
        <th>Statu</th>
        <th>Update</th>
        <th>Remove</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialId</td>
            <td>@item.NameSurname</td>
            <td>@item.ImageUrl</td>
            <td>@item.Description</td>
            <td>@item.Statu</td>
            <td><a href="#" type="button" class="btn btn-outline-success">Update</a></td>
            <td><a href="#" type="button" class="btn btn-outline-danger">Remove</a></td>
        </tr>
    }
</table>
<td><a href="/Testimonial/CreateNewTestimonial" type="button" class="btn btn-outline-primary">Create New Testimonial</a></td>