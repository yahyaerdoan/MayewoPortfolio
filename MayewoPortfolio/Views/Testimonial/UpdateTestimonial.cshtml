@model MayewoPortfolio.Models.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <title>Bootstrap Example</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="card">
        <div class="card-header">
            <h5 class="card-title"> Update Testimonial</h5>
        </div>
        <div class="card-body" style="background-color:ghostwhite">
            <div class="mb-3">
                <form method="post" action="">
                    <label for="testimonialid" class="form-label, mt-2"><b>Testimonial Id</b></label>
                    <input type="text" class="form-control" id="testimonialid" value="@Model.TestimonialId" name="TestimonialId">

                    <label for="namesurname" class="form-label, mt-2"><b>NameSurname</b></label>
                    <input type="text" class="form-control" id="namesurname" value="@Model.NameSurname" name="NameSurname">

                    <label for="url" class="form-label, mt-2"><b>Description</b></label>
                    <input type="text" class="form-control" id="url" value="@Model.Description" name="Description">

                    <label for="imageurl" class="form-label, mt-2"><b>Image Url</b></label>
                    <input type="text" class="form-control" id="imageurl" value="@Model.ImageUrl" name="ImageUrl">

                    <label for="icon" class="form-label, mt-2"><b>Statu</b></label>
                    <input type="text" class="form-control" id="icon" value="@Model.Statu" name="Statu">

                    <div class="mt-3">
                        <button type="submit" class="btn btn-outline-success" style="margin-right: 5px;">Save Changes</button>
                        <button href="/Testimonial/Index/" type="submit" class="btn btn-outline-warning">Go Back</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

