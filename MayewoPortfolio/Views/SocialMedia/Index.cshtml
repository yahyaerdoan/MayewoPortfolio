@model List<MayewoPortfolio.Models.SocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Social Media List</h2>

<table class="table table-hover">
    <tr class="table-info">
        <th>Id</th>
        <th>Title</th>
        <th>Url</th>
        <th>Icon</th>
        <th>Update</th>
        <th>Remove</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SocialMediaId</td>
            <td>@item.Title</td>
            <td>@item.Url</td>
            <td>@item.Icon</td>
            <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" type="button" class="btn btn-outline-success">Update</a></td>
            <td><a href="/SocialMedia/RemoveSocialMedia/@item.SocialMediaId" type="button" class="btn btn-outline-danger">Remove</a></td>
        </tr>
    }
</table>
<td><a href="/SocialMedia/CreateNewSocialMedia" type="button" class="btn btn-outline-primary">Create New Social Media</a></td>