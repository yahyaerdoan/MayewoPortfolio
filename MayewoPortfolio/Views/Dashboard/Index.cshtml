
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Static Modern Dashboard</title>
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f4f7fc;
            font-family: 'Nunito', sans-serif;
        }

        .dashboard-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: all 0.3s ease-in-out;
            cursor: pointer;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0,0,0,0.2);
            }

        .card-icon {
            font-size: 30px;
            width: 60px;
            height: 60px;
            line-height: 60px;
            text-align: center;
            border-radius: 30px;
            color: #fff;
            margin: 20px auto 10px;
        }

        .bg-primary {
            background-color: #007bff;
        }

        .bg-success {
            background-color: #28a745;
        }

        .bg-info {
            background-color: #17a2b8;
        }

        .bg-danger {
            background-color: #dc3545;
        }

        .chart-container {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            padding: 20px;
            margin-top: 50px;
        }
    </style>
</head>
<body>

    <div class="container py-4">
        <div class="row g-4">
            <!-- Dashboard Cards -->
            <div class="col-md-3">
                <div class="dashboard-card p-4 text-center">
                    <div class="card-icon bg-primary"><i class="fas fa-folder-open"></i></div>
                    <h5 class="card-title mb-2">Kategori Sayısı</h5>
                    <p class="card-text">10</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-card p-4 text-center">
                    <div class="card-icon bg-success"><i class="fas fa-code-branch"></i></div>
                    <h5 class="card-title mb-2">Proje Sayısı</h5>
                    <p class="card-text">150</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-card p-4 text-center">
                    <div class="card-icon bg-info"><i class="fas fa-project-diagram"></i></div>
                    <h5 class="card-title mb-2">Son Proje</h5>
                    <p class="card-text">Web Tasarım</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-card p-4 text-center">
                    <div class="card-icon bg-danger"><i class="fas fa-envelope-open-text"></i></div>
                    <h5 class="card-title mb-2">Okunmamış Mesaj Sayısı</h5>
                    <p class="card-text">250</p>
                </div>
            </div>
        </div>

        <!-- Chart Container -->
        <div class="chart-container mt-5">
            <canvas id="staticDashboardChart"></canvas>
        </div>
    </div>

    <script>
        var ctx = document.getElementById('staticDashboardChart').getContext('2d');
        var staticDashboardChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ["Kategori", "Proje", "Mesaj", "Flutter Proje", "Okunmamış Mesaj"],
                datasets: [{
                    label: 'İstatistikler',
                    backgroundColor: 'rgba(255, 159, 64, 0.2)',
                    borderColor: 'rgba(255, 159, 64, 1)',
                    data: [5, 12, 20, 3, 7],
                    fill: true,
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>