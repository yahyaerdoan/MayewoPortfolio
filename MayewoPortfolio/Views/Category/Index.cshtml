@model List<MayewoPortfolio.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Category List</h2>

<table class="table table-hover">
    <tr class="table-info">
        <th>Id</th>
        <th>Category Name</th>
        <th>Update</th>
        <th>Remove</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.Name</td>
            <td><a href="/Category/UpdateCategory/@item.CategoryId" type="button" class="btn btn-outline-success">Update</a></td>
            <td><a href="/Category/RemoveCategory/@item.CategoryId" type="button" class="btn btn-outline-danger">Remove</a></td>
        </tr>
    }
</table>
<td><a href="/Category/CreateNewCategory/" type="button" class="btn btn-outline-primary">Create New Category</a></td>  