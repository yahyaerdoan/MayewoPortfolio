@model MayewoPortfolio.Models.Project
@{
    ViewBag.Title = "CreateNewProject";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Create New Project</h2>

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <title>Bootstrap Example</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="p-3 m-0 border-0 bd-example m-0 border-0">

    <!-- Example Code -->

    <form class="form-group" method="post">
        <div class="mb-3">
            <label for="title" class="form-label"><b>Title</b></label>
            @*<input type="text" class="form-control" id="title" name="Title">*@           
            @Html.TextBoxFor(x=>x.Title, new {@class = "form-control"})
        </div>
        <div class="mb-3">
            <label for="categoryId" class="form-label"><b>Category</b></label>
            @*<input type="text" class="form-control" id="categoryId" name="CategoryId">*@
            @Html.DropDownListFor(c => c.CategoryId, (List<SelectListItem>)ViewBag.values, new { @class = "form-control", id = "categoryId" })
        </div>
        <div class="mb-3">
            <label for="description" class="form-label"><b>Description</b></label>
            @*<input type="text" class="form-control" id="description" name="Description">*@
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <label for="imageurl" class="form-label"><b>Image Url</b></label>
            @*<input type="text" class="form-control" id="imageurl" name="ImageUrl">*@
            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <label for="projecturl" class="form-label"><b>Project Url</b></label>
            @*<input type="text" class="form-control" id="projecturl" name="ProjectUrl">*@
            @Html.TextBoxFor(x => x.ProjectUrl, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-outline-primary">Submit New Project</button>        
        <button  href="/Project/Index/" type="button" class="btn btn-outline-success">Go Back To Project List</button>
    </form>
    <!-- End Example Code -->
</body>
</html>
