@model MayewoPortfolio.Models.Future
@{
    ViewBag.Title = "UpdateFuture";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <title>Bootstrap Example</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="card">
        <div class="card-header">
            <h5 class="card-title"> Update About</h5>
        </div>
        <div class="card-body" style="background-color:ghostwhite">
            <div class="mb-3">
                <form method="post" action="">

                    <label for="futureid" class="form-label"><b>Future Id</b></label>
                    <input type="text" class="form-control" id="futureid" value="@Model.FutureId" name="FutureId">

                    <label for="namesurname" class="form-label"><b>Name - Surname</b></label>
                    <input type="text" class="form-control" id="namesurname" value="@Model.NameSurname" name="NameSurname">

                    <label for="header" class="form-label"><b>Header</b></label>
                    <input type="text" class="form-control" id="header" value="@Model.Header" name="Header">

                    <label for="title" class="form-label"><b>Title</b></label>
                    <input type="text" class="form-control" id="title" value="@Model.Title" name="Title">

                    <button type="submit" class="btn btn-outline-success">Save Changes</button>
                    <button href="/Future/Index/" type="submit" class="btn btn-outline-warning">Go Back</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

