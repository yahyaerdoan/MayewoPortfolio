@model List<MayewoPortfolio.Models.Future>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Feature List</h2>

<table class="table table-hover">
    <tr class="table-info">
        <th>Id</th>
        <th>Header</th>
        <th>Name - Surname</th>
        <th>Title</th>
        <th>Update</th>
        <th>Remove</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FutureId</td>
            <td>@item.Header</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td><a href="/Future/Update/@item.FutureId" type="button" class="btn btn-outline-success">Update</a></td>
            <td><a href="/Future/RemoveFeature/@item.FutureId" type="button" class="btn btn-outline-danger">Remove</a></td>
        </tr>
    }
</table>        
<td><a href="/Future/CreateNewFeature/" type="button" class="btn btn-outline-primary">Create New Feature</a></td>

