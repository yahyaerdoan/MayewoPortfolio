@model List<MayewoPortfolio.Models.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Service List</h2>

<table class="table table-hover">
    <tr class="table-info">
        <th>Id</th>
        <th>Title</th>
        <th>Description</th>        
        <th>Image</th>
        <th>Update</th>
        <th>Remove</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>            
            <td><a href="/Service/UpdateService/@item.ServiceId" type="button" class="btn btn-outline-success">Update</a></td>
            <td><a href="/Service/RemoveService/@item.ServiceId" type="button" class="btn btn-outline-danger">Remove</a></td>
        </tr>
    }
</table>
<td><a href="/service/CreateNewService" type="button" class="btn btn-outline-primary">Create New Service</a></td>
